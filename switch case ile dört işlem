#include<stdio.h>
#include <stdlib.h>
int main(void)
{
	int sayi1,sayi2, sonuc;
	char islem;
	sayi1 = 75;
	sayi2 = 15;
	printf("yapilmasini istediÄŸiniz islemi girin:");

	scanf_s("%c",&islem);


	switch (islem)
	{
	case'+':
		sonuc = sayi1 + sayi2;
		printf("sonuc:%d", sonuc);
		break;

	case'-':
		sonuc = sayi1 - sayi2;
		printf("sonuc:%d", sonuc);
		break;
	case '*':
		sonuc = sayi1 * sayi2;
		printf("sonuc:%d", sonuc);
		break;

	case '/':
		sonuc = sayi1 / sayi2;
		printf("sonuc:%d", sonuc);
		break;

	default:
		printf("hatali isaret girdiniz.");
		break;
	}





	return 0;
}
