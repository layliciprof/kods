#include <stdio.h>

int main() {

	int dizi[100];

	int i, eleman, toplam, ort;


	printf("kac elemanli: ");
	scanf_s("%d", &eleman);
	toplam = 0;


	for (i = 0; i < eleman; i++)
	{
		printf("dizinin %d. elemanini gir: ", i + 1);
		scanf_s("%d", &dizi[i]);
		toplam = toplam + dizi[i];
		ort = toplam / eleman;
	}

	printf("elemanlar toplami: %d\n ",toplam);
	printf("ort: %d",ort);


	return 0;

}

