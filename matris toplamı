  #include<stdio.h>

    int main(){
          int matris1[4][3] = {{6,7,8},{1,3,2},{5,2,8},{1,3,6}}; \\burada parantez içleri direkt yazılabilir.
          int matris2[4][3] = {{6,8,1},{9,11,3},{3,10,18},{14,2,8}};  
          int toplam[4][3];

          int i,j;

          for(i=0;i<4;i++)
          {
             for(j=0;j<3;j++)
             {
                toplam[i][j] = matris1[i][j] + matris2[i][j];          
             }
          }
          for(i=0;i<4;i++)
          {
             for(j=0;j<3;j++)
             {
                printf("%d ",toplam[i][j]);        
             }
             printf("nn");      
          }
          return 0;
    }
